# SafeVision Production Configuration
# Copy this to .env and modify as needed

# Security Configuration
SECRET_KEY=your_super_secure_secret_key_here
SAFEVISION_ADMIN_PASSWORD=your_admin_password_here

# Flask Configuration
FLASK_ENV=production
DEBUG=False

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Database Configuration (if using external database)
# DATABASE_URL=postgresql://user:pass@localhost/safevision

# SSL Configuration (for production)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Storage Configuration
RECORDINGS_DIR=./recordings
THUMBNAILS_DIR=./static/thumbnails
MAX_RECORDING_SIZE_MB=500

# Performance Monitoring
PERFORMANCE_LOG_INTERVAL=30
ALERT_EMAIL=admin@yourdomain.com

# Camera Configuration
DEFAULT_CAMERA_INDEX=0
FRAME_WIDTH=640
FRAME_HEIGHT=480

# AI Model Configuration
DETECTION_CONFIDENCE_THRESHOLD=0.5
TRACKING_MAX_DISAPPEARED=50
TRACKING_MAX_DISTANCE=100
